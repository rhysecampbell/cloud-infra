
##########################################################
# configuration file for Sendcc - bjt 2011               #
# **MUST** be located in </etc/vaisala-config/do-sendcc> #
##########################################################

# logging and debug stuff ######################
LogFilePath = /var/log/sendcc/fcast{{ item }}.log
LogToFile = yes
DebugLevel = 3
OutputXmlPath = /home/data/sendcc_dir/output
OutputXMLtoDisk = no
###############################################

# message Stuff ###############################
DeleteFilesOnSuccess = yes
SuccessPath =/home/data/sendcc_dir/success
MoveFilesOnSuccess = no
FastTrackRequired = no
stripUnderScores = yes
SendRetries = 3
ForceZuluTime = no
CompressOutputMessage = no
overRideXMLCodespace = no
SetClockFromServer = no
SetClockThreshold = 3
ConnectToServer = yes
AutoServerFallBack = no
# local server
PrimaryURL = http://localhost:30001

