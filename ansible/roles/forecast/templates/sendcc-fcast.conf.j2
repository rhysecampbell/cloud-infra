JPGReason = scheduled
JPGCameraNumber = 2
JPGIdSource = fileName
JPGStationID = test_jpg_station
JPGCodeSpace = ROSA_M_14
JPGIDType = webCamFileName

###############################################
# M14 message type #
VaiReason = scheduled
VAIIdSource = VAIBoardID
VAIStationID = uio_test_25
VaiCodeSpace = AIRPORTS
VAIIDType = stationFullName

